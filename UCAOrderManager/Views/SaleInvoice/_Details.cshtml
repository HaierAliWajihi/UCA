<div class="form-group">
    <table class="table">
        <thead>
            <tr style="border-bottom:solid;border-bottom-width:thin;">
                <th>
                    @Html.DisplayName("Scientific Name")
                </th>

                <th>
                    @Html.DisplayName("Common Name")
                </th>

                <th>
                    @Html.DisplayName("Description")
                </th>

                <th>
                    @Html.DisplayName("Size")
                </th>

                @*<th>
                        @Html.DisplayName("Cultivation Type")
                    </th>*@

                <th>
                    @Html.DisplayName("Price ($USD)")
                </th>

                <th>
                    @Html.DisplayName("Qty")
                </th>

                <th>
                    @Html.DisplayName("Amt")
                </th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(item => item.Products[i].ScientificName)
                    </td>

                    <td>
                        @Html.DisplayFor(item => item.Products[i].CommonName)
                    </td>

                    <td>
                        @Html.DisplayFor(item => item.Products[i].Descr)
                    </td>

                    <td>
                        @Html.DisplayFor(item => item.Products[i].SizeName)
                    </td>

                    @*<td>
                            @Html.DisplayFor(item => item.Products[i].CultivationTypeName)
                        </td>*@

                    <td>
                        @Html.DisplayFor(item => item.Products[i].Rate)
                    </td>

                    <td>
                        @Html.DisplayFor(item => item.Products[i].Qty, new { @class = "form-control" })
                    </td>

                    <td>
                        @Html.DisplayFor(item => item.Products[i].Amt)
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="h4">
            <tr>
                <td></td>

                <td></td>

                <td>
                    Domestic Freight charges
                </td>

                <td>
                    @Html.DisplayFor(item => item.DomesticFreightCharges)
                </td>

                <td>
                    Total
                </td>

                <td>
                    @Model.Products.Sum(x => x.Qty)
                </td>

                <td>
                    @Model.Products.Sum(x => x.Amt)
                </td>
            </tr>

            <tr>
                <td></td>

                <td></td>

                <td>
                    Box charges
                </td>

                <td>
                    @Html.DisplayFor(item => item.BoxCharges, new { @class = "form-control" })
                </td>

                <td colspan="2">
                    Previous Credits
                </td>

                <td>
                    @Html.DisplayFor(item => item.PreviousCredit, new { @class = "form-control" })
                </td>
            </tr>

            <tr>
                <td></td>

                <td></td>

                <td>
                    International Freight charges
                </td>

                <td>
                    @Html.DisplayFor(item => item.IntFreightCharges, new { @class = "form-control" })
                </td>

                <td colspan="2">
                    Total Freight
                </td>

                <td>
                    @Html.DisplayFor(item => item.TotalFreight, new { @class = "form-control" })
                </td>
            </tr>

            <tr>
                <td></td>

                <td></td>

                <td>
                    TT fee
                </td>

                <td>
                    @Html.DisplayFor(item => item.TTFee, new { @class = "form-control" })
                </td>

                <td colspan="2"></td>

                <td></td>
            </tr>

            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>

                <td colspan="2">
                    Total Payable ($USD)
                </td>

                <td>
                    @Html.DisplayFor(item => item.TotalPayableAmt, new { @class = "form-control", @readonly = "readonly" })
                </td>
            </tr>
        </tfoot>
    </table>
</div>


