@model UCAOrderManager.Models.Product.ProductScientificNameViewModel

@{
    ViewBag.Title = "Create";
}

<h2>@(Model == null || Model.ProductScientificNameID == 0? "Create" : "Edit")</h2>

@using (Html.BeginForm("Create", "ProductScientificNameMaster")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Product Scientific Name</h4>
        <hr />
        @Html.ValidationSummary(true)

        @if (Model != null && Model.ProductScientificNameID != 0)
        {
            @Html.HiddenFor(r=> r.ProductScientificNameID)
        }
        
        <div class="form-group">
            @Html.LabelFor(model => model.ProductScientificName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ProductScientificName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductScientificName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsAlive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.IsAlive)
                @Html.ValidationMessageFor(model => model.IsAlive)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
